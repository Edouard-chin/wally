{% extends '::base.html.twig' %}
{% block bodyclass %}page-body login-page login-form-fall{% endblock %}
{% block body %}
<div class="login-container">
  <div class="login-header login-caret">
    <div class="login-content">
      <p class="description">Create an account, it's free and takes few moments only!</p>
    </div>
  </div>
  <div class="login-form">
    <div class="login-content">
      <div class="form-login-error" style="display: block;">
        {{ form_errors(form) }}
      </div>
      <form method="post" role="form" action="{{ path('fos_user_registration_register') }}">
        <div class="form-steps">
          <div class="step current" id="step-1">
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">
                  <i class="entypo-user"></i>
                </div>
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
              </div>
              <div class="form-login-error" style="display: block;">
                {{ form_errors(form.email) }}
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">
                  <i class="entypo-phone"></i>
                </div>
                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
                <div class="form-login-error" style="display: block;">
                  {{ form_errors(form.username) }}
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">
                  <i class="entypo-calendar"></i>
                </div>
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
              </div>
              <div class="form-login-error" style="display: block;">
                {{ form_errors(form.plainPassword.first) }}
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">
                  <i class="entypo-calendar"></i>
                </div>
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Repeat'}}) }}
                {{ form_widget(form._token) }}
              </div>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block btn-login">
                <i class="entypo-right-open-mini"></i>
                Create account
              </button>
            </div>
          </div>
        </div>
      </form>
      <div class="login-bottom-links">
        <a href="{{ path('fos_user_security_login') }}" class="link">
          <i class="entypo-lock"></i>
          Return to Login Page
        </a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
  {% javascripts
    'bundles/socialwall/lib/neon/js/neon-register.js'
    'bundles/socialwall/lib/neon/js/jquery.validate.min.js'
    output='compiled/js/admin-register.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}
