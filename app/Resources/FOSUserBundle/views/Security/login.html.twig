{% extends '::base.html.twig' %}

{% block title %}Admin Wally - Login{% endblock title %}
{% block bodyclass %}page-body login-page login-form-fall{% endblock %}
{% block body %}
<div class="login-container">
  <div class="login-header login-caret">
    <div class="login-content">
      <a href="index.html" class="logo">
        <img src="assets/images/logo@2x.png" width="120" alt="" />
      </a>
      <p class="description">Please log in to administrate your socialwall!</p>
    </div>
  </div>
  <div class="login-form">
    <div class="login-content">
      {% if error %}
        <div class="form-login-error" style="display: block;">
          <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
        </div>
      {% endif %}
      <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-user"></i>
            </div>
            <input type="text" class="form-control" name="_username" id="username" value="{{ last_username }}" placeholder="Username" autocomplete="off" />
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-key"></i>
            </div>
            <input type="password" class="form-control" name="_password" id="password" placeholder="Password" autocomplete="off" />
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block btn-login">
            <i class="entypo-login"></i>
            Login In
          </button>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
      </form>
      <div class="login-bottom-links">
        <a href="extra-forgot-password.html" class="link">Forgot your password?</a>
        <br />
      </div>
    </div>
  </div>
</div>
{% endblock body %}
{% block javascripts %}
  {% javascripts
    'bundles/socialwall/lib/neon/js/neon-login.js'
    'bundles/socialwall/lib/neon/js/jquery.validate.min.js'
    output='compiled/js/admin-login.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}
