<div class="modal fade {% block class %}{% endblock %}" id="{% block id %}{% endblock %}" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{% block modal_title %}{% endblock %}</h4>
      </div>
      <div class="modal-body">{% block modal_body %}{% endblock %}</div>
      <div class="modal-footer">{% block modal_footer %}{% endblock %}</div>
    </div>
  </div>
</div>
